<Window x:Class="TextExtractor.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextExtractor.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="DisplaysList" 
                  ItemsSource="{Binding DisplayList}" 
                  VerticalAlignment="Top" SelectedItem="{Binding SelectedDisplay, Mode=TwoWay}"/>
        <Image Source="{Binding DisplayImage}" Grid.Row="1"/>
    </Grid>
</Window>
